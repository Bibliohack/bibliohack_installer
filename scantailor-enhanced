

#DISTRO=`cat /etc/issue.net`
DISTRO=`cat lsb_release -rs`
# lsb_release  -cs -> 'xenial'

if [ "$DISTRO" == "16.04" ]
 then
   sudo apt-get install build-essential cmake
   sudo apt-get install libqt4-dev
   sudo apt-get install libjpeg8-dev libjpeg-dev libtiff5-dev libpng12-dev
   sudo apt-get install zlib1g-dev libboost-all-dev libxrender-dev 

   [[ -d "/opt/src" ]] || sudo mkdir /opt/src
   [[ -w "/opt/src" ]] || sudo chmod a+rw /opt/src
   cd /opt/src

fi