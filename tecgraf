# = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = #

[[ "`uname -o`" == "GNU/Linux" ]] || {
   echo "Este script solo puede utilizarse en sistemas 'GNU/Linux'"
   exit 1
}
KERNEL="Linux32"            #"Linux44" #es para nombre interno del paquete tecgraf
TAR_EXT="tar.gz"
[[ "`uname -m`" == "x86_64" ]] && TYPE="_64" || TYPE=""

URL='http://codex.bibliohack.org/media/files/tecgraf'

OWN_PATH="$PWD/$0"
CURRENT_USER="$USER"

SRCDIR=/opt/src
TECDIR=$SRCDIR/tecgraf

case "$1" in
    uninstall)
        set_tecgraf_profile "$2"
        set_packages_param
        uninstall_libs
        test_tecgraf
    ;;
    '' | install_tecgraf)
        set_tecgraf_profile "$2"
        set_packages_param
        install_tecgraf
        test_tecgraf
        [[ "$fail_test" == "Yes" ]] && exit 1
    ;;
    luatest)
        test_tecgraf
        [[ "$fail_test" == "Yes" ]] && exit 1
    ;;
    iup_ver)
        echo `get_version 'iup'` || exit 1
    ;;
    cd_ver)
        echo `get_version 'cd'` || exit 1
    ;;
    im_ver)
        echo `get_version 'im'` || exit 1
    ;;
    iup_path)
        echo `get_path 'iup'` || exit 1
    ;;
    cd_path)
        echo `get_path 'cd'` || exit 1
    ;;
    im_path)
        echo `get_path 'im'` || exit 1
    ;;

    *)
        echo "ERROR: parametro desconocido '$1'"
        exit 1
esac

exit 0
