#TODO:
function get_version {
  [[ "$1" =~ ^(iup|im|cd)$ ]] && lib="$1" || { echo "ERROR: debug: get_version: valor no admitido: '$1'"; return 1; }
  [[ -f "/usr/bin/lua5.1" ]] || { echo "ERROR: lua5.1 no instalado. Ejecutar 'tecgraf' en '/opt/src/instaladores'"; return 1; } #TODO chequear lua path para debian!!
  lua5.1 -e "require '${lib}lua'" 2>/dev/null && {
    lua5.1 -e "require '${lib}lua'; print(${lib}.Version())"
    return 0
  } || { echo "'${lib}' no instalado. Ejecutar 'tecgraf' en '/opt/src/instaladores'"; return 1; }
}

function get_path {
  [[ "$1" =~ ^(iup|im|cd)$ ]] && lib="$1" || { echo "ERROR: debug: get_path: valor no admitido: '$1'"; return 1; }

  VER=`get_version "${lib}"`
  lib_path="${TECDIR}/${lib}-${VER}_${KERNEL}${TYPE}_lib"
  [[ -d "${lib_path}" ]] && {
    echo "${lib_path}"
    return 0
  } || {
    echo "ERROR! no existe '${lib_path}' para la versión ${VER} de '${lib}'."
    return 1
  }
}

