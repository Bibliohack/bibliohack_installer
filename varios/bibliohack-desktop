Categories=GNOME;Bibliohack;
Icon[es_AR]=/usr/share/icons/Tango/scalable/categories/applications-system.svg
Exec=${BIBLIOHACK_DIR}/dalclick/ppm/ppm_daemon.sh
Name[es_AR]=DALproc
Name=DALproc
Icon=/usr/share/icons/Tango/scalable/categories/applications-system.svg
Comment[es_AR]=Gestor de Postproceso
Comment=Gestor de Postproceso

EOF
)

if [[ -f "${BIBLIOHACK_DIR}/dalclick/dalclick" ]]
  then
	echo "Creando menu bibliohack"
	sudo mkdir "/etc/xdg/menus/applications-merged" || exit 1
	echo "$MENUBIBLIOHACK_CONTENT" | sudo tee "$MENUBIBLIOHACK_FILE" && echo "OK" || exit 1

	echo "Creando directory bibliohack"
	echo "$DIRBIBLIOHACK_CONTENT" | sudo tee "$DIRBIBLIOHACK_FILE" && echo "OK" || exit 1

	echo "Creando entrada dalclick desktop"
	echo "$APPDALCLICK_CONTENT" | sudo tee "$APPDALCLICK_FILE" && echo "OK" || exit 1

	echo "Creando entrada dalproc desktop"
	echo "$APPDALPROC_CONTENT" | sudo tee "$APPDALPROC_FILE" && echo "OK" || exit 1

else
	echo "No se instalan entradas al menu de Bibliohack porque no est치 instalado!"
fi

echo "P치gina de inicio de Firefox"
echo "$FIREFOXPREF_CONTENT" | sudo tee -a "$FIREFOXPREF_FILE" && echo "OK" || exit 1

# no seleccionamos Tango icons para el escritorio porque no quedan bien en indicator-applet
# gsettings set org.gnome.desktop.interface icon-theme 'Tango'


