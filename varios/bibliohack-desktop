pack-type=end
pack-index=1

EOF
)

echo "Deteniendo Gdm3"
sudo systemctl stop gdm3 && echo "OK" || exit 1

echo "Instalando paquetes"
# #check_and_install_pkg 'lightdm' 'gnome-session-flashback' 'slick-greeter' 'lightdm-settings' 'arc-theme' 'tango-icon-theme' || { echo "error!"; return 1; }

dpkg_install "$BIBLIOHACK_ORIG/deb/bibliohack-desktop" && echo "OK" || exit 1

echo "Eliminando gdm3"
check_and_remove_pkg 'ubuntu-session' 'gdm3' && echo "OK" || { echo "error!"; exit 1; }

echo "Creado archivo de configuracion lightdm greeter-session"
echo "$LIGHTDM_CONF_CONTENT" | sudo tee "$LIGHTDM_CONF_FILE" && echo "OK" || exit 1

echo "Configurando lightdm"
sudo dpkg-reconfigure lightdm && echo "OK" || exit 1

# Configuraciones del escritorio

echo "Customizar panel por defecto de Gnome"
echo "$GNOMEPANELS_CONTENT" | sudo tee "$GNOMEPANELS_FILE" && echo "OK" || exit 1

echo "Eliminar bookmarks por defecto y agregar 'Archivo'"
echo "$GNOMEBOOKMARKS_CONTENT" > "$GNOMEBOOKMARKS_FILE" && echo "OK" || exit 1

echo "Deshabilitar popup de actualizaciones de software"
gsettings set com.ubuntu.update-notifier no-show-notifications true && echo "OK" || exit 1

echo "Desinstalar unattended-upgrades"
sudo apt-get remove unattended-upgrades && echo "OK" || exit 1

echo "Explorador de archivos muestra rutas que se pueden copiar"
gsettings set org.gnome.nautilus.preferences always-use-location-entry true && echo "OK" || exit 1

echo "La terminal no muestra menu"
gsettings set org.gnome.Terminal.Legacy.Settings default-show-menubar false && echo "OK" || exit 1

echo "Dejar solo un area de trabajo"
gsettings set org.gnome.desktop.wm.preferences num-workspaces 1 && echo "OK" || exit 1

echo "Selecionar Arc-theme"
gsettings get org.gnome.desktop.interface gtk-theme 'Arc' && echo "OK" || exit 1

